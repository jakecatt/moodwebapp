<header>
	<div class="logout">
		<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
	</div>
	<div class="home">
		<%= link_to image_tag("http://i.imgur.com/I7O3Zsu.png"), usermoods_path %>
	</div>
</header>

<%= form_for(@mood) do |f| %>
	
	<h3>Rate your mood:</h3>

	<div class="field">
		<%= f.range_field :rating, in: 1..100 %>
	</div>
		
	<br>
		
	<h3>And a message:</h3>

	<%= f.text_field :message, :placeholder => "" %>
	
	<br>
	<br>

	<%= f.submit "Submit", :type => :image, :src => image_path("http://i.imgur.com/rY87M5n.png") %> 

<% end %>